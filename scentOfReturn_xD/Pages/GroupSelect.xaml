<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="scentOfReturn_xD.Pages.GroupSelect"
             BackgroundColor="BlanchedAlmond"
             NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout>
        <Picker x:Name="GroupPicker"
        Title="Select a monkey">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Baboon</x:String>
                    <x:String>Capuchin Monkey</x:String>
                    <x:String>Blue Monkey</x:String>
                    <x:String>Squirrel Monkey</x:String>
                    <x:String>Golden Lion Tamarin</x:String>
                    <x:String>Howler Monkey</x:String>
                    <x:String>Japanese Macaque</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <BoxView Opacity="0.1" BackgroundColor="BlanchedAlmond" WidthRequest="15" HeightRequest="1000" HorizontalOptions="Start">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="ReturnBack"/>
            </BoxView.GestureRecognizers>
        </BoxView>
    </VerticalStackLayout>
</ContentPage>